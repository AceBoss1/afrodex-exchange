{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx", // Next.js uses the React automatic runtime
    
    // --- START: ADDED PATHS TO FIX '@/' ALIAS ERRORS ---
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"] // This tells Next.js/TypeScript that @/ points to the project root
    }
    // --- END: ADDED PATHS TO FIX '@/' ALIAS ERRORS ---
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
